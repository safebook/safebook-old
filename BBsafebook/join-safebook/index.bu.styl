#content
  width 750px
  margin auto
  background-color rgba(73, 187, 91, 0.16)
  border-radius 15px
  border 2px solid #2c9950
  color #2c9950
  padding-bottom 20px
  height 420px
  input
    width 180px
    height 20px
    border-radius 15px
    border 2px solid #2c9950
    outline none
    padding 3px 3px 3px 10px
    color #2c9950
    font-size 13px
    background-color #f2faf4
    &:focus
      -moz-box-shadow 0 0 6px #4abb5b inset
      -webkit-box-shadow 0 0 6px #4abb5b inset
      box-shadow 0 0 6px #4abb5b inset
  .invalid
    border 2px solid #ed0000
    color #ed0000

h2
  font-weight normal
  border 2px solid #2c9950
  border-top none
  width 250px
  border-radius 0px 0px 15px 15px
